{
  "name": "sticky-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "cf:build": "npm run build:css && opennextjs-cloudflare build && node scripts/copy-worker.cjs",
    "cf:preview": "wrangler pages dev .open-next/assets",
    "cf:deploy": "wrangler pages deploy .open-next/assets",
    "build:next": "next build",
    "dev": "next dev",
    "start": "next start",
    "build:css": "tailwindcss -i ./src/app/globals.css -o ./public/app.css --minify",
    "git": "git add . && git commit -m 'update' && git push origin main"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "next": "15.5.2",
    "papaparse": "^5.5.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-markdown": "^10.1.0",
    "recharts": "^3.3.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "1.11.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.46.0"
  }
}
